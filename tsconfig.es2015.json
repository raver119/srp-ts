{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "diagnostics": true,
    "target": "ES2015",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es2015"
    ],
    "module": "es2015",
    "sourceMap": false,
    "typeRoots": [
      "/.node_modules/@types"
    ],
    "outDir": "build/es2015/",
    "declarationDir": "build/es2015/",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.test.ts",
    "src/**/*.test.ts",
    "build/**/*.js",
    "build/**/*.ts"
  ]
}